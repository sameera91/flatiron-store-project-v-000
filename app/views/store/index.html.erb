<% if current_user %>
<p>Signed in as <%=current_user.email%></p>
<%end%>

<% @categories.each do |category| %>
  <%= link_to category.title, category_path(category) %>
<% end %>

<% @items.available_items.each do |item| %>
  <p><%= item.title %> | <%= number_to_currency(item.price/100.0) %> | <%= button_to 'Add to Cart', line_items_path(item_id: item) %></p>
<% end %>

<%= link_to "sign in", user_session_path %><br>
<%= link_to "Sign up", new_user_registration_path %><br>
<%= link_to "Sign out", destroy_user_session_path, method: :delete %>